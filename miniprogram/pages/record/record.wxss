    width: 30%;
  text-align: center;
}
.recordListTop{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  color: #777777;
  font-size: 26rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content:space-between;
  margin-top: 10rpx;
  border-bottom: 2rpx solid #777777;
}
.recordListType{
  padding-right: 20rpx;
}
.recordListDate{
  padding-left: 20rpx;
}
.recordList{
