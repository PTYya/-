.box{
  width: 100%;
  height: auto;
  overflow-x: hidden; 
}
.header{
  overflow: hidden;
  width: 100%;
  height: 120rpx;
  background-color: #333366;
  color:white;
}
.headerTop{
  width: 100%;
  height: 50rpx;
  color: #777777;
  font-size: 26rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content:left;
}
.content{
  height: auto;
  width: 100%;
  overflow-x: hidden;
  margin-bottom: 20rpx;
}
.year{
  width: 20%;
  height: 50rpx;
 padding: 0 20rpx;
}
.headerBottom{
  height: 50rpx;
  width: 100%;
  padding: 10rpx 20rpx;
 color:white;
 font-size: 40rpx;
 display: flex;
  }
.headerBottom picker{
  width: 20%;
  border-right: 2rpx solid white;
}
