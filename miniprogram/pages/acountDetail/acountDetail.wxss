/* pages/acountDetail/acountDetail.wxss */
.header{
  width: 100%;
  height: 100rpx;
  overflow: hidden
}
.categoryPicker{
  width:20%;
  float: left;
  display: block;
  font-size: 35rpx;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 10rpx;
  background-color:#fff;
}
.categoryPic{
  width: 50%;
  height: 100rpx;
  float:left;
}
.datePicker{
  width:20%;
  float: right;
  display: block;
  font-size:30rpx;
  height: 75rpx;
  margin-top: 20rpx;
  margin-right: 10rpx;
  line-height: 78rpx;
  border: 2rpx solid #33cc00;
  border-radius: 10rpx;
  color: black;
  text-align: center;
}
.numberInput{
  width: 100%;
  height: 60rpx;
  margin-top: 30rpx;
  display: flex;
  Flex-direction: row;

}
.numberInput input{
  height: 60rpx;
  line-height: 60rpx;
  width: auto;
  margin-left: 20rpx;
}
.remarks{
  width:90%;
  margin:10rpx 20rpx;
  padding-top: 10rpx;
  border-top: 2rpx solid #333366;
}
.usedeposits{
  margin: 10rpx;
  float: right;

}
.btnarea{
  width: 100%;
  position: absolute;
  bottom: 0;
}
.btnarea button{
  width:100%;
  background-color: #fff;
  border: 2rpx #333366 solid;
}
.radiotext{
  border: 2rpx solid #33cc00;
  border-radius: 10rpx;
}
.btnarea button{
  width: 50%;
  float: left;
  border: none;
}